@using Kachuwa.Form
@using Kachuwa.KGrid
@using Kachuwa.Web
@using Kachuwa.Web.Model
@model Setting
@{
    ViewData["Title"] = "WebSite Setting";
}
<section class="container-fluid">
    <div class="row">
        <div class="col-wrapper col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel_wrapper">
                <div class="panel module" aria-multiselectable="true">
                    <div class="panel-inner">

                        <div class="panel-heading clearfix">
                            <h2 class="panel-title pull-left col-md-2 col-xs-6" style="padding-top: 7.5px;">Web Settings</h2>
                            <div class="input-group col-md-9 col-xs-4">
                                <div class="input-group-btn pull-right">

                                </div>
                            </div>
                        </div>
                        <div class="panel-collapse" aria-labelledby="headingOne"
                             aria-expanded="true">
                            <div class="panel-body">
                                @(Html.CreateKachuwaForm<Setting>("pageForm", Model)
                                      .SetHeading("")
                                       .EncType("multipart/form-data")
                                      .ActionUrl("/admin/setting/web")
                                      .CancelUrl("/admin/setting/web")
                                      .CreateSection(section =>
                                      {
                                      // section.Add("section1", "myclass");
                                      section.Add("section1", "col-md-8", rows =>
                                      {
                                      rows.Add("1strow", "form-group", columns =>
                                      {
                                          columns.Add("12strow1stcol", "", controls =>
                                          {
                                              controls.Add("form-control", x => x.SettingId, FormInputControl.Hidden);
                                          });
                                          columns.Add("1strow1stcol", "", controls =>
                                          {
                                              controls.Add("form-control", x => x.WebsiteName, FormInputControl.TextBox)
                                              .SetPlaceHolder("Enter Your WebSite Name")
                                              .SetDisplayName("WebSite Name");
                                          });
                                      });
                                      rows.Add("2strow", "form-group", columns =>
                                      {
                                          columns.Add("2strow1stcol", "colClass", controls =>
                                          {
                                              controls.Add("form-control", x => x.Description, FormInputControl.TextArea);


                                          });
                                      });
                                      rows.Add("2strow", "row", columns =>
                                      {
                                          columns.Add("2strow1stcol", "", controls =>
                                          {
                                              controls.Add("form-control", x => x.Logo, FormInputControl.Hidden);

                                          });

                                          columns.Add("2strow1stcol", "col-md-6", controls =>
                                          {
                                              controls.Add("form-control", x => x.LogoFile, FormInputControl.File);

                                          });
                                          columns.Add("2strow1stcol", "col-md-6",@<div>
                                                                                             <img src="@Model.Logo" class="img img-responsive" width="=200" />                                     
                                                                                         </div>);
                                              });

                                          }).SetHeading("Configuration").SetHelpLine("Configure your website information");

                                          section.Add("section2", "col-md-4", rows =>
                                          {
                                              rows.Add("1strow", "form-group", columns =>
                                              {

                                                  columns.Add("1strow1stcol", "", controls =>
                                                  {
                                                      controls.Add("form-control", x => x.BaseCulture, FormInputControl.TextBox)
                                                      .SetPlaceHolder("Enter Your Culture");
                                                  });
                                              });
                                              rows.Add("2strow", "form-group", columns =>
                                              {
                                                  columns.Add("2strow1stcol", "colClass", controls =>
                                                  {
                                                      controls.Add("form-control", x => x.BaseCurrency,
                                                          FormInputControl.TextBox);


                                                  });
                                              });
                                              rows.Add("2strow", "form-group", columns =>
                                              {
                                                  columns.Add("2strow1stcol", "colClass", controls =>
                                                  {
                                                      controls.Add("form-control", x => x.CurrencyCode, FormInputControl.TextBox);

                                                  });
                                              });

                                          }).SetHeading("Locality").SetHelpLine("Configure your locale");


                                          section.Add("section3", "col-md-12", rows =>
                                          {
                                              rows.Add("1strow", "form-group", columns =>
                                              {

                                                  columns.Add("1strow1stcol", "col-md-6", controls =>
                                                  {
                                                      controls.Add("form-control", x => x.Address1, FormInputControl.TextBox)
                                                      .SetPlaceHolder("Enter Address 1");
                                                  });
                                                  columns.Add("2strow1stcol", "col-md-6", controls =>
                                                  {
                                                      controls.Add("form-control", x => x.Address2, FormInputControl.TextBox)
                                                        .SetPlaceHolder("Enter Address 2");

                                                  });
                                              });
                                              rows.Add("2strow", "form-group", columns =>
                                              {
                                                  columns.Add("2strow1stcol", "col-md-4", controls =>
                                                  {
                                                      controls.Add("form-control", x => x.City, FormInputControl.TextBox)
                                                        .SetPlaceHolder("Enter City");

                                                  });
                                                  columns.Add("2strow1stcol", "col-md-4", controls =>
                                                  {
                                                      controls.Add("form-control", x => x.State, FormInputControl.TextBox)
                                                        .SetPlaceHolder("Enter State");

                                                  });
                                                  columns.Add("2strow1stcol", "col-md-4", controls =>
                                                  {
                                                      controls.Add("form-control", x => x.Country, FormInputControl.TextBox)
                                                        .SetPlaceHolder("Enter Country");

                                                  });
                                              });
                                              rows.Add("2strow", "form-group", columns =>
                                              {
                                                  columns.Add("2strow1stcol", "col-md-6", controls =>
                                                  {
                                                      controls.Add("form-control", x => x.Longitude, FormInputControl.TextBox);

                                                  });
                                                  columns.Add("2strow1stcol", "col-md-6", controls =>
                                                  {
                                                      controls.Add("form-control", x => x.Lattitude, FormInputControl.TextBox);

                                                  });
                                              });

                                          }).SetHeading("Location").SetHelpLine("Configure your location");

                                          section.Add("section4", "col-md-12", rows =>
                                          {
                                              rows.Add("1strow", "form-group", columns =>
                                              {

                                                  columns.Add("1strow1stcol", "", controls =>
                                                  {
                                                      controls.Add("form-control", x => x.GoogleAnalyticScript, FormInputControl.TextArea)
                                                      .SetPlaceHolder("Enter Google Anylaytic Scripts")
                                                      .SetHelp("enter scripts provided by google for your website.");
                                                  });
                                              });
                                              rows.Add("2strow", "form-group", columns =>
                                              {
                                                  columns.Add("2strow1stcol", "colClass", controls =>
                                                  {
                                                      controls.Add("form-control", x => x.UseHttps, FormInputControl.Switch)
                                                        .SetHelp("allow your site run on secure https,ps. ssl certificate must be installed before use.");

                                                  });

                                              });

                                          }).SetHeading("Others").SetHelpLine("");

                                      })
                                )
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
@section scripts{
    <script type="text/javascript" asp-add-nonce="true">
        (function() {

            $(".keychange").keyup(function(event) {

                var name = $(this).val();
                var dname_without_space = name.replace(/\s\s+/g, ' ');
                var name_without_special_char = dname_without_space.replace(/[^a-zA-Z 0-9 -]+/g, "");
                if (this.name == "Name") {
                    $(this).val(name_without_special_char);
                } else
                    $(".keychange").val(name_without_special_char);
                if ($.trim(name_without_special_char).replace(/ /g, "-") != "")
                    $(".urlchange").val("/" + $.trim(name_without_special_char).replace(/ /g, "-"));
                else {
                    $(".urlchange").val("");
                }
                // $("#lblUrl").text(hostUrl + "/" + name_without_special_char);

            });

            $(".keychange").change(function(event) {

                var name = $(this).val();
                var dname_without_space = name.replace(/\s\s+/g, ' ');
                var name_without_special_char = dname_without_space.replace(/[^a-zA-Z 0-9 -]+/g, "");
                if (this.id == "Title") {
                    $(this).val(name_without_special_char);
                } else
                    $(".keychange").val(name_without_special_char);
                if ($.trim(name_without_special_char).replace(/ /g, "-") != "")
                    $(".urlchange").val("/" + $.trim(name_without_special_char).replace(/ /g, "-"));
                else {
                    $(".urlchange").val("");
                }
                //$("#lblUrl").text(hostUrl + "/" + name_without_special_char);

            });
            $(".urlchange").keyup(function(event) {

                var fulltxt = $(this).val();
                var pagename = fulltxt.replace("/", "");
                var pagenam2 = fulltxt.replace("/", "");
                // console.log(pagename);
                var dname_without_space = pagename.replace(/ /g, "");
                var dname_with_space = pagenam2.replace(/-/g, " ");
                var name_without_special_char = dname_without_space.replace(/[^a-zA-Z 0-9 -]+/g, "");
                var name_without_special_char2 = dname_with_space.replace(/[^a-zA-Z 0-9 -]+/g, "");

                $(this).val("/" + name_without_special_char.replace(/\-+/g, '-'));
                //$("#lblUrl").text(hostUrl + "/" + name_without_special_char);
                // $(".keychange").val(name_without_special_char2);
            });
        })();


    </script>
}