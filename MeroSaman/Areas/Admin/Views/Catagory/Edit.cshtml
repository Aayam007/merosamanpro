@model MeroSaman.Models.Catagory
@{
    ViewData["Title"] = "Catagory";
}
<section class="container-fluid p-o">
    <div style="background:white">
        <div class="col-md-12">
            <div class="module-tabs">
                <div class="col-md-3">
                    <h1>Category</h1>
                </div>
                <div class="col-md-9">
                    <ul class="nav nav-pills" style="float:right">
                        <li class="nav-item">
                            <a class="nav-link active" href="/Catagory"><h3>Overview</h3></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <form action="/catagory/edit" method="post">
                <input type="hidden" name="CatagoryId" value="@Model.CatagoryId" />
                <div class="form-group">
                    <label class="control-label">Catagory Name</label>
                    <input name="Name" value="@Model.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">IsActive</label><br />
                    <input type="checkbox" name="IsActive" asp-for="IsActive"><span>Active</span><br /><br />
                    <span class="alert-danger" asp-for="AddedOn"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-success btn-sm" />
                </div>
            </form>
        </div>
        </div>
</section>
