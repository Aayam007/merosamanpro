<script>

    $("#myInput").keyup(function () {
        $(".card1").hide();
        $(".myproduct").html("");
        var string = $(this).val();
        $.ajax({
            type: "POST",
            url: "/Product/Search",
            data: { txtValue: string },
            success: function (data) {
                if (data != null) {
                    $.each(data, function (index, item) {
                        var list = '<div class="card2" style="float:left">' +
                            ' <img src="/Image/' + item.image + '" alt="Product image" height="50" width="50" align="middle" name="image">' +
                            '<h1>' + item.name + '</h1>' +
                            '<p class="title1"></p>' +

                            '<p>' + item.descripton + '</p>' +
                            '  <p>' +
                            ' <button style="border: none; outline: 0; padding: 12px; color: white; background-color: #000; text-align: center; cursor: pointer; width: 100%; font-size: 18px">' +
                            ' Details' +
                            ' </button>' +
                            '</p>' +
                            ' </div>';
                        $(".myproduct").append(list);
                    });
                }
                else {
                    alert("Ali ramrari search gar jatha");
                }

            }
        });
    })

    $(".mywishlist").on("click", function () {

    });

    //wish list
    var count = 1;
    $(".mywishAdd").on("click", function () {
        var id = $(this).prev().attr('value');
        var productname = $(this).parents('.item-info-product').find('a').text().trim();
        var imagepath = $(this).parents('.simpleCart_shelfItem').find('img').attr('src').trim();
        var price = $(this).parents('.item-info-product').find('span').text().trim();

        var quantity = 1;

        if ($("td:contains('" + id + "')").length > 0) {



            var lastqty = $("td:contains('" + id + "')").next().next().next().next().text();
            var tolqty = parseInt(lastqty) + parseInt(quantity);

            $("td:contains('" + id + "')").siblings('.quantity2').text(tolqty);
        }
        else {


            var aa = "<tr>" +
                "<td style='display:none;' class=''> " + id + "</td>" +
                "<td class=''> " + productname + "</td>" +
                /**/
                "<td class='price2'><img src='" + imagepath + "'  width =20></td>" +
                /**/
                "<td class='price2'> " + price + "</td>" +
                "<td class='quantity2'> " + quantity + "</td>" +
                "</tr>";
            $('#mycart tbody').append(aa);
            $(".mywishlist").empty();
            $(".mywishlist").append(count);
            count++;

        }

    });


</script>
